<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="UTF-8">
    <title>Eco Perks</title>
    <link rel="stylesheet" href="styles/slotbooking.css">

    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Rounded:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200">

  </head>
  <body>
      <div class="wrapper">
        <div class="recycle-heading-container">
          <p class="recycle-heading">Recycle</p>
        </div>

        <form class="steps-container" action="/slotbooking" method="post">

          <div class="container-1">
            <div action="" class="form-container">
                <div class="step-1">
                    <p class="text">Step 1: User Information</p>
                </div>
                <div class="input-field-container">
                    <label for="name" class="block">Name:</label>
                    <input type="text" id="name" name="name" class="input-field js-name" required>
                </div>
                <div class="input-field-container">
                    <label for="address" class="block">Address:</label>
                    <input type="text" id="address" name="address" class="input-field js-address" required>
                </div>
                <div class="input-field-container">
                    <label for="pin" class="block">PIN:</label>
                    <input type="text" id="pin" name="pin" class="input-field js-pin" required>
                </div>
                <div class="input-field-container">
                    <label for="contact" class="block">Contact Number:</label>
                    <input type="tel" id="contact" name="contact" class="input-field js-contact" pattern="[0-9]{10}" required>
                </div>
            </div>
          </div>

          <div class="container-2">
            <div class="step-2">
              <p class="text">Step 2: Date Selection</p>
            </div>

            <div class="calender-details">
              <header>
                <h2 class="current-date"></h2>
                <div class="icons">
                  <span id="prev" class="material-symbols-rounded">chevron_left</span>
                  <span id="next" class="material-symbols-rounded">chevron_right</span>
                </div>
              </header>
              <div class="calendar">
                <ul class="weeks">
                  <li>Sun</li>
                  <li>Mon</li>
                  <li>Tue</li>
                  <li>Wed</li>
                  <li>Thu</li>
                  <li>Fri</li>
                  <li>Sat</li>
                </ul>
                <ul class="days">
                </ul>
              </div>
            </div>
          </div>

          <div class="final-step">
            <input class="show-date js-show-date" name="date" value="Date Selected">

            <div class="button-container">
              <input type="submit" class="confirm-button" value="Confirm" onclick="confirm()">
            </div>
          </div>
          
        </form>

      </div>

      <script src="scripts/slotbooking.js"></script>
      <script src="scripts/book-slot.js"></script>
  </body>
</html>